/* 新增加载状态样式 */
.loading-mask {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  padding: 16px;
  background: rgba(0,0,0,0.7);
  border-radius: 8px;
  color: white;
}
.loading-text {
  font-size: 14px;
}

