.uni-worker-list {
  /* border: 2px solid #303133; */
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  flex-direction: row;
}
.info {
  position: absolute;
  right: 20rpx;
}
.u-content {
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
  text-align: left;
}
.wrap {
  padding: 40rpx;
}
._s .card-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
