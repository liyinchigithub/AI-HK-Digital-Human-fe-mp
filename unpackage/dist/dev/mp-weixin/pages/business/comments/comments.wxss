
.comment-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 20px;
}
.rating-section {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 20px;
}
.content-section,
.tags-section {
	margin-bottom: 20px;
	width: 100%;
	max-width: 400px;
}
.tags-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}
.tag {
	background-color: #f0f0f0;
	border-radius: 3px;
	padding: 5px 10px;
	margin: 5px;
	cursor: pointer;
}
.tag.selected {
	background-color: #4D9FA4;
	color: white;
}

