page {
  background-color: #f7f7f7;
  padding-bottom: 30rpx;
}
.notice-item {
  width: 95%;
  flex-direction: column;
  align-items: center;
}
.time {
  margin-left: 120rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  height: 80rpx;
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #000000;
}
.content {
  width: 100%;
  padding: 0 24rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.title {
  display: flex;
  align-items: center;
  height: 90rpx;
  font-size: 40rpx;
  color: #303133;
}
.img-wrapper {
  width: 100%;
  height: 260rpx;
  position: relative;
}
.pic {
  display: block;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 95%;
  height: 100%;
  border-radius: 0rpx;
}
.cover {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 36rpx;
  color: #fff;
}
.introduce {
  display: inline-block;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #606266;
  line-height: 38rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.bot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 80rpx;
  font-size: 25rpx;
  color: #000000;
  position: relative;
}
.more-icon {
  font-size: 32rpx;
}
.loading {
  text-align: center;
  color: #8F8F94;
}
.red-dot {
  width: 10px;
  height: 10px;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 10px;
  right: 10px;
}
