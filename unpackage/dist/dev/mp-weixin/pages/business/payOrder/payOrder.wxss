.huaxian {
  font-size: 30rpx;
  color: #82848a;
  text-decoration: line-through;
}
.od-top-status {
  height: 250rpx;
  background: #34beff;
  margin-left: 2%;
  margin-right: 2%;
  margin-bottom: 2%;
  border-radius: 15rpx;
}
.title {
  position: absolute;
  margin-top: 2%;
  margin-left: 15%;
  color: #fff;
  font-size: 60rpx;
}
.icon {
  position: absolute;
  right: 0.4rem;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 80%;
  height: 100rpx;
}
.good-info {
  margin-top: 5%;
  margin-left: 10%;
  color: #000000;
  font-size: 30rpx;
}
.order-info {
  height: 250rpx;
  background: #ffffff;
  margin-left: 2%;
  margin-right: 2%;
  border-radius: 15rpx;
}
image {
  width: 300rpx;
  height: 300rpx;
  margin-right: 10rpx;
}
.wrap {
  padding: 40rpx;
}
.payButton {
  text-align: right;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
}
.content .logo {
  width: 100%;
  min-height: 100rpx;
}
.content .uni-card {
  width: 95%;
  border-radius: 100rpx;
  text-align: left;
  color: #333;
  font-size: 30rpx;
  white-space: pre-wrap;
  line-height: 1.6;
}
.content .foot {
  color: #fff;
  margin: 20rpx 0;
}
.navigation {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  height: 120rpx;
  box-shadow: -2px 0 24px rgba(255, 255, 255, 0.8);
}
.navigation .uni-tabbar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
