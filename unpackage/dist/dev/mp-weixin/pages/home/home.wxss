.container.data-v-92bb8f34 {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.message-list.data-v-92bb8f34 {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  width: 100vw; /* 确保宽度不超过视口 */
  overflow-x: hidden; /* 禁用横向滚动 */
}
.message-item.data-v-92bb8f34 {
  margin: 20rpx 0;
  max-width: 80%;
  width: -webkit-fit-content;
  width: fit-content;
}
.message-content.data-v-92bb8f34 {
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-word; /* 新增：长文本自动换行 */
}
.input-area.data-v-92bb8f34 {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  width: 100vw; /* 确保不超出视口 */
}
.user-message.data-v-92bb8f34 {
  margin-left: auto;
  margin-right: 25rpx;  /* 右侧留出安全边距 */
}
.user-message .message-content.data-v-92bb8f34 {
  background-color: #007AFF;
  color: white;
  max-width: 100%;     /* 防止内容溢出 */
  padding: 20rpx 25rpx; /* 优化左右内边距 */
}
.ai-message .message-content.data-v-92bb8f34 {
  background-color: #FFFFFF;
  border: 1rpx solid #eee;
}
.message-time.data-v-92bb8f34 {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: right;
}
.input.data-v-92bb8f34 {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
}
.send-button.data-v-92bb8f34 {
  background-color: #007AFF;
  color: white;
  border-radius: 40rpx;
  padding: 0 40rpx;
  transition: opacity 0.3s;
}
.send-button[disabled].data-v-92bb8f34 {
  opacity: 0.6;
}
.loading-text.data-v-92bb8f34 {
  color: #999;
