.coupon-item {
  width: 92%;
  height: auto;
  display: table;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-top: 22rpx;
  border: 1px solid #a09595;
  position: relative;
}
.coupon-item .coupon-money {
  width: 550rpx;
  height: auto;
  display: table;
  float: left;
  padding: 26rpx 0;
  border-style: none dotted none none;
  border-color: #8d8383;
}
.coupon-item .coupon-money .nick {
  width: 100%;
  height: 50rpx;
  line-height: 30rpx;
  /* font-size: $font-sm; */
  color: #ff6200;
  font-weight: bold;
  font-size: 45rpx;
}
.coupon-item .coupon-money .tit {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  /* font-size: $font-sm; */
  color: white;
}
.coupon-item .coupon-money .demand {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  /* font-size: $font-sm; */
  /* color: $font-color-999; */
}
.coupon-item .coupon-money .layof {
  width: 100%;
  height: 48rpx;
  line-height: 30rpx;
  font-size: 70rpx;
  font-weight: bold;
}
.coupon-item .coupon-money .end_time {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  /* font-size: $font-sm; */
  /* color: $font-color-999; */
}
.coupon-item .get-btn {
  margin-top: 50rpx;
  width: 146rpx;
  height: 52rpx;
  line-height: 50rpx;
  position: absolute;
  top: 50%;
  right: 5rpx;
  margin-top: -26rpx;
  color: #ff9000;
  /* font-size: $font-sm; */
  float: right;
}
.coupon-item:after {
  width: 40rpx;
  height: 20rpx;
  position: absolute;
  left: 460rpx;
  top: -1px;
  border-radius: 0 0 40rpx 40rpx;
  content: "";
  display: block;
  background: "#ffffff";
  border: 1px solid #71d5a1;
  border-top: 0px;
}
.coupon-item:before {
  width: 40rpx;
  height: 20rpx;
  position: absolute;
  left: 460rpx;
  bottom: -1px;
  border-radius: 40rpx 40rpx 0 0;
  content: "";
  display: block;
  background: "#ffffff";
  border: 1px solid #71d5a1;
  border-bottom: 0px;
}
